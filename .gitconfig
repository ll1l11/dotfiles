[core]
    editor = vim
[merge]
    tool = vimdiff
[alias]
    lg = log --graph --abbrev-commit --pretty=format:'%C(red)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset'
    co = checkout
    br = branch
    ci = commit
    st = status
[color]
    ui = auto
[push]
    default = simple
